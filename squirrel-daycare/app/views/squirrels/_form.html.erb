<%= form_for(@squirrel) do |f| %>
  <% if @squirrel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@squirrel.errors.count, "error") %> prohibited this squirrel from being saved:</h2>

      <ul>
      <% @squirrel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>
  <div class="field form-group">
    <%= f.label :breed %><br>
    <%= f.text_field :breed, class: 'form-control', placeholder: 'Breed' %>
  </div>
  <div class="field form-group">
    <%= f.label :age %><br>
    <%= f.number_field :age, class: 'form-control', placeholder: 'Age' %>
  </div>
  <div class="field form-group">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Owner.all, :id, :name, {prompt: "Select an Owner"}, {class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-warning" %>
  </div>
<% end %>
